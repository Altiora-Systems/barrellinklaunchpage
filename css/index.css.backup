    font-size: 16px; /* Prevent iOS zoom on focus */
  }
  
  /* Enhanced button spacing */
  .form__btn,
  .nav__btn,
  .cta-form__btn {
    padding: var(--space-md) var(--space-lg);
    min-height: 48px;
    font-size: 16px;
  }
  
  /* Better touch area for cards */
  .why-card,
  .why-section-embedded .why-card {
    padding: var(--space-xl);
    margin-bottom: var(--space-lg);
  }
}

/* High-resolution displays (Retina, etc.) */
@media (-webkit-min-device-pixel-ratio: 2),
       (min-resolution: 192dpi) {
  .hero__image,
  .why-card__image,
  .why-section-embedded .why-card__image {
    image-rendering: crisp-edges;
    image-rendering: -webkit-optimize-contrast;
  }
}

/* Landscape orientation optimizations for mobile */
@media (max-width: 768px) and (orientation: landscape) {
  .hero {
    min-height: 100vh;
  }
  
  .hero__wrapper {
    padding-top: var(--space-lg);
  }
  
  .hero__title {
    font-size: var(--text-4xl);
  }
  
  .hero__subtitle {
    font-size: var(--text-sm);
    margin-bottom: var(--space-lg);
  }
  
  .hero__form {
    margin-bottom: var(--space-lg);
  }
}

/* Print-friendly styles */
@media print {
  .hero__background-wave,
  .hero__wave,
  .hero__wave-container,
  .background-wave-svg {
    display: none !important;
  }
  
  .hero__form,
  .form__btn {
    display: none !important;
  }
  
  .hero__wrapper {
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  
  .hero__title,
  .hero__subtitle {
    color: #000 !important;
  }
  
  .why-card,
  .why-section-embedded .why-card {
    page-break-inside: avoid;
    margin-bottom: 20pt;
  }
}

/* Reduced motion preferences */
@media (prefers-reduced-motion: reduce) {
  .hero__form,
  .form__input,
  .form__btn,
  .why-card,
  .why-section-embedded .why-card,
  .why-card__image,
  .why-section-embedded .why-card__image {
    transition: none;
  }
  
  .why-card:hover,
  .why-section-embedded .why-card:hover {
    transform: none;
  }
  
  .why-card:hover .why-card__image,
  .why-section-embedded .why-card:hover .why-card__image {
    transform: none;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  :root {
    --color-background: #1a1a1a;
    --color-surface: #2a2a2a;
    --color-text-dark: #ffffff;
    --color-text-body: #e0e0e0;
    --color-border: #404040;
  }
  
  .form__input {
    background-color: var(--color-surface);
    color: var(--color-text-dark);
    border-color: var(--color-border);
  }
  
  .why-card,
  .why-section-embedded .why-card {
    background-color: rgba(42, 42, 42, 0.8);
  }
  
  .why-card:hover,
  .why-section-embedded .why-card:hover {
    background-color: rgba(42, 42, 42, 0.95);
  }
}

